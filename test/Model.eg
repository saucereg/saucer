
require-macros:
   earl-mocha ->
      describe, it, before, after
      xdescribe, xit
      assert, asserts

require:
   underscore -> {size, debounce}
   ../src/Saucer

init-one-col = Saucer.Collection()

class InitOneMod < Saucer.Model:
   constructor() = Saucer.Model.apply(@, arguments)

   one = null

   initialize = ->
      @one = 1
      assert @collection == init-one-col

describe "Saucer.Model":

   it "initializes":

      m = InitOneMod({}, {collection = init-one-col})

      assert m.one == 1
      assert m.collection == init-one-col
